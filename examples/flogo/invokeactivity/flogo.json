{
  "name": "invokeactivity",
  "type": "flogo:app",
  "version": "0.0.1",
  "description": "Sample Flogo App",
  "appModel": "1.0.0",
  "imports": [
    "github.com/project-flogo/contrib/trigger/rest",
    "github.com/project-flogo/core/examples/action",
    "github.com/project-flogo/rules/ruleaction",
    "github.com/project-flogo/contrib/activity/log",
    "github.com/project-flogo/flow",
    "github.com/project-flogo/legacybridge"
  ],
  "triggers": [
    {
      "id": "receive_http_message",
      "ref": "github.com/project-flogo/contrib/trigger/rest",
      "settings": {
        "port": "7777"
      },
      "handlers": [
        {
          "settings": {
            "method": "GET",
            "path": "/test/n1"
          },
          "actions": [
            {
              "id": "simple_rule",
              "input": {
                "tupletype": "n1",
                "values": "=$.queryParams"
              }
            }
          ]
        }
      ]
    }
  ],
  "resources": [
    {
      "id": "rulesession:simple",
      "data": {
        "metadata": {
          "input": [
            {
              "name": "values",
              "type": "string"
            },
            {
              "name": "tupletype",
              "type": "string"
            }
          ],
          "output": [
            {
              "name": "outputData",
              "type": "any"
            }
          ]
        },
        "rules": [
          {
            "name": "n1.name == Tom",
            "conditions": [
              {
                "name": "c1",
                "identifiers": [
                  "n1"
                ],
                "evaluator": "checkForTom"
              }
            ],
            "actionService": {
              "service": "LogActivityService",
              "input": {
                "message": "=$.n1.name"
              }
            }
          },
          {
            "name": "n1.name == Bob",
            "conditions": [
              {
                "name": "c1",
                "identifiers": [
                  "n1"
                ],
                "evaluator": "checkForBob"
              }
            ],
            "actionService": {
              "service": "FunctionService",
              "input": {
                "message": "=$.n1.name"
              }
            }
          },
          {
            "name": "n1.name == Robert",
            "conditions": [
              {
                "name": "c1",
                "identifiers": [
                  "n1"
                ],
                "evaluator": "checkForRobert"
              }
            ],
            "actionService": {
              "service": "FlowActionService",
              "input": {
                "anInput": "=$.n1.name"
              }
            }
          },
          {
            "name": "n1.name == Michael",
            "conditions": [
              {
                "name": "c1",
                "identifiers": [
                  "n1"
                ],
                "evaluator": "checkForMichael"
              }
            ],
            "actionService": {
              "service": "CoreActionService",
              "input": {
                "anInput": "=$.n1.name"
              }
            }
          }
        ],
        "services": [
          {
            "name": "LogActivityService",
            "description": "log activity service",
            "type": "activity",
            "ref": "github.com/project-flogo/contrib/activity/log"
          },
          {
            "name": "FunctionService",
            "description": "function service",
            "type": "function",
            "function": "checkForBobAction"
          },
          {
            "name": "FlowActionService",
            "description": "flow action service",
            "type": "action",
            "ref": "github.com/project-flogo/flow",
            "settings": {
              "flowURI": "res://flow:sample_flow"
            }
          },
          {
            "name": "CoreActionService",
            "description": "flow action service",
            "type": "action",
            "ref": "github.com/project-flogo/core/examples/action",
            "settings": {
              "aSetting": "test setting"
            }
          }
        ]
      }
    },
    {
      "id": "flow:sample_flow",
      "data": {
        "name": "SampleFlow",
        "tasks": [
          {
            "id": "log_message",
            "name": "Log Message",
            "description": "Simple Log Activity",
            "activity": {
              "ref": "#log",
              "input": {
                "message": "Simple Log"
              }
            }
          }
        ]
      }
    }
  ],
  "actions": [
    {
      "ref": "github.com/project-flogo/rules/ruleaction",
      "settings": {
        "ruleSessionURI": "res://rulesession:simple",
        "tds": [
          {
            "name": "n1",
            "properties": [
              {
                "name": "name",
                "pk-index": 0,
                "type": "string"
              }
            ],
            "ttl": 0
          },
          {
            "name": "n2",
            "properties": [
              {
                "name": "name",
                "pk-index": 0,
                "type": "string"
              }
            ]
          }
        ]
      },
      "id": "simple_rule"
    },
    {
      "ref": "github.com/project-flogo/flow",
      "settings": {
        "flowURI": "res://flow:sample_flow"
      },
      "id": "test_flow_action"
    },
    {
      "ref": "github.com/project-flogo/core/examples/action",
      "settings": {
        "aSetting": "test setting"
      },
      "id": "test_core_action"
    }
  ]
}